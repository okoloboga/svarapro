#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/user/code/svara-pro/node_modules/.pnpm/telegraf@4.16.3/node_modules/telegraf/lib/node_modules:/home/user/code/svara-pro/node_modules/.pnpm/telegraf@4.16.3/node_modules/telegraf/node_modules:/home/user/code/svara-pro/node_modules/.pnpm/telegraf@4.16.3/node_modules:/home/user/code/svara-pro/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/user/code/svara-pro/node_modules/.pnpm/telegraf@4.16.3/node_modules/telegraf/lib/node_modules:/home/user/code/svara-pro/node_modules/.pnpm/telegraf@4.16.3/node_modules/telegraf/node_modules:/home/user/code/svara-pro/node_modules/.pnpm/telegraf@4.16.3/node_modules:/home/user/code/svara-pro/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../telegraf/lib/cli.mjs" "$@"
else
  exec node  "$basedir/../telegraf/lib/cli.mjs" "$@"
fi
